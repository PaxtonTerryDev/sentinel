generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum IdentityProvider {
  INTERNAL
  GOOGLE

  @@map("IDENTITY_PROVIDER")
}

model User {
  id    String @id @default(uuid())
  email String @unique

  identities   Identity[]
  applications UsersOnApplications[]
  sessions     Session[]

  @@map("user")
}

model Identity {
  id             String           @id @default(uuid())
  provider       IdentityProvider
  userId         String           @map("user_id")
  providerUserId String?          @map("provider_user_id")
  accessToken    String?          @map("access_token")
  refreshToken   String?          @map("refresh_token")
  tokenExpiresAt DateTime?        @map("token_expires_at")
  metadata       Json             @default("{}")

  internalIdentityId String?           @unique @map("internal_identity_id")
  internalIdentity   InternalIdentity? @relation(fields: [internalIdentityId], references: [id], onDelete: Cascade)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, userId])
  @@map("identity")
}

model InternalIdentity {
  id            String  @id @default(uuid())
  passwordHash  String  @map("password_hash")
  emailVerified Boolean @default(false) @map("email_verified")

  firstName String? @map("first_name")
  lastName  String? @map("last_name")
  phone     String?
  avatarUrl String? @map("avatar_url")

  address    String?
  city       String?
  state      String?
  postalCode String? @map("postal_code")
  country    String?

  identity Identity?

  @@map("internal_identity")
}

model Application {
  id               String             @id @default(uuid())
  displayName      String             @map("display_name")
  secret           String             @unique
  enabledProviders IdentityProvider[] @map("enabled_providers")
  allowedOrigins   String[]           @map("allowed_origins")
  allowedRedirects String[]           @map("allowed_redirects")

  users    UsersOnApplications[]
  sessions Session[]

  @@map("application")
}

model UsersOnApplications {
  userId        String @map("user_id")
  applicationId String @map("application_id")

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@id([userId, applicationId])
  @@map("users_on_applications")
}

// Sessions are issued
// 1 user can have one active session per application
model Session {
  id               String    @id @default(uuid())
  userId           String    @map("user_id")
  applicationId    String    @map("application_id")
  created          DateTime  @default(now())
  expires          DateTime
  lastActive       DateTime  @default(now()) @map("last_active")
  revoked          DateTime?
  refreshTokenHash String    @map("refresh_token_hash")
  active           Boolean   @default(true)

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  application Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  userAgent   UserAgent?

  @@map("session")
}

model UserAgent {
  id      String @id @default(uuid())
  ip      String
  browser String
  os      String
  device  String

  sessionId String  @unique @map("session_id")
  session   Session @relation(fields: [sessionId], references: [id], onUpdate: Cascade)

  @@map("user_agent")
}
